{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active C++ file (MSYS2 g++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-O2",
        "-fopenmp",
        "-std=c++17",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
